{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/*.o": true,
        "**/*.d": true,
        "**/.DS_Store": true
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "git.confirmSync": false,
    "scm.defaultViewMode": "tree",
    "files.autoSave": "afterDelay",
    "cmake.configureOnOpen": true,
    "gitlens.mode.active": "review"

}